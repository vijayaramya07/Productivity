<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Login">
    <ContentPage.Content>
        <StackLayout Margin="20, 40, 20, 0">
            <Label Text="LOGIN PAGE" Padding="30" HorizontalTextAlignment="Center" Font="Bold,25" TextDecorations="None"  CharacterSpacing="1" TextColor="DarkBlue"/>
            <Label Text="Please ! Login Here Now" Padding="30" HorizontalTextAlignment="Center" Font="Bold,20" TextDecorations="None"  CharacterSpacing="1" TextColor="DarkBlue"/>

            <Entry x:Name="username" Text="{Binding Username}" Placeholder="Username" BackgroundColor="LightSteelBlue" TextColor="Black" PlaceholderColor="Black" />
            <Entry x:Name="password" Text="{Binding Password}"  Placeholder="Password" BackgroundColor="LightSteelBlue" TextColor="Black" PlaceholderColor="Black" />

            <Button Text="LOGIN NOW"
        x:Name="LoginButton"
        Clicked="LoginButton_Clicked"
                Margin="20, 20, 20, 0"
                BackgroundColor="DarkBlue"
                TextColor="white"/>
         


        </StackLayout>
    </ContentPage.Content>
</ContentPage>